<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://apiLogListView.title"
      focusComponent="apiLogsDataGrid">
    <data>
        <collection id="apiLogsDc"
                    class="ru.thedevs.entity.ApiLog">
            <fetchPlan extends="_base"/>
            <loader id="apiLogsDl" readOnly="true">
                <query>
                    <![CDATA[select e from ApiLog e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="apiLogsDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="readButton" action="apiLogsDataGrid.readAction"/>
            <button id="refreshButton" action="apiLogsDataGrid.refreshAction"/>
            <simplePagination id="pagination" dataLoader="apiLogsDl"/>
        </hbox>
        <dataGrid id="apiLogsDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="apiLogsDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="readAction" type="list_read"/>
                <action id="refreshAction" type="list_refresh"/>
            </actions>
            <columns resizable="true">
                <column property="token"/>
                <column property="type"/>
                <column property="status"/>
                <column property="message"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
