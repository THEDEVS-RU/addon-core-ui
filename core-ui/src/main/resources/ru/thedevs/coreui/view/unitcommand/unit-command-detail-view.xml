<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://unitCommandDetailView.title"
      focusComponent="form">
    <data>
        <instance id="unitCommandDc"
                  class="ru.thedevs.entity.UnitCommand">
            <fetchPlan extends="_base">
                <property name="unit" fetchPlan="_instance_name"/>
            </fetchPlan>
            <loader id="unitCommandDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="unitCommandDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="nameField" property="name"/>
            <textField id="valueField" property="value"/>
            <checkbox id="crlfField" property="crlf"/>
            <checkbox id="hexField" property="hex"/>
            <entityPicker id="unitField" property="unit">
                <actions>
                    <action id="entityLookupAction" type="entity_lookup"/>
                    <action id="entityClearAction" type="entity_clear"/>
                </actions>
            </entityPicker>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
