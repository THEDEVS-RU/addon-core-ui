<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://additionalDataListView.title"
      focusComponent="additionalDatasDataGrid">
    <data>
        <collection id="additionalDatasDc"
                    class="ru.thedevs.entity.AdditionalData">
            <fetchPlan extends="_base"/>
            <loader id="additionalDatasDl" readOnly="true">
                <query>
                    <![CDATA[select e from AdditionalData e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="additionalDatasDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="additionalDatasDataGrid.createAction"/>
            <button id="editButton" action="additionalDatasDataGrid.editAction"/>
            <button id="removeButton" action="additionalDatasDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="additionalDatasDl"/>
        </hbox>
        <dataGrid id="additionalDatasDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="additionalDatasDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="din"/>
                <column property="dout"/>
                <column property="timestamp"/>
                <column property="peer"/>
                <column property="battery.voltage"/>
                <column property="channel.id"/>
                <column property="engine.motorHours"/>
                <column property="engine.rpm"/>
                <column property="engine.status"/>
                <column property="engine.temperature"/>
                <column property="gsm.mcc"/>
                <column property="gsm.mnc"/>
                <column property="lls.temperature2"/>
                <column property="lls.temperature3"/>
                <column property="lls.value2"/>
                <column property="lls.value3"/>
                <column property="vehicle.mileage"/>
                <column property="vehicle.speed"/>
                <column property="server.timestamp"/>
                <column property="log.number"/>
                <column property="lights.status"/>
                <column property="webasto.status"/>
                <column property="movement.status"/>
                <column property="ignition.status"/>
                <column property="trunk.status"/>
                <column property="pedal.level"/>
                <column property="fuel.volume"/>
                <column property="handbrake.status"/>
                <column property="low.status"/>
                <column property="hood.status"/>
                <column property="remote.status"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
